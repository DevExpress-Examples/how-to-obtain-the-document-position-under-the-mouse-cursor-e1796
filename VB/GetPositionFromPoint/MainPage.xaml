<UserControl x:Class="GetPositionFromPoint.MainPage"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="513" 
    xmlns:dxreex="http://schemas.devexpress.com/winfx/2008/xaml/richeditextensions">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <dxreex:RichEdit HorizontalAlignment="Stretch"  Name="richEdit1" MouseLeftButtonUp="richEdit1_MouseLeftButtonUp" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <TextBlock  FontSize="18" Text="Clicked Letter: "/>
            <TextBlock x:Name="tbClickedLetter" Foreground="Red" FontSize="18"/>
        </StackPanel>
    </Grid>
</UserControl>
